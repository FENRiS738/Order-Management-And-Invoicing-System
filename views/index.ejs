<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/static/style.css" />

    <!-- Custom JS -->
    <!-- <script src="https://js.stripe.com/v3/"></script> -->

    <title>Sales Manager</title>
  </head>
  <body>
    <%- include('header'); -%>
    <%- include('error') %>
    <main class="container">
      <form
        action="/acknowledge"
        class="form-box"
        method="post"
        enctype="multipart/form-data"
        name="sales_form"
      >
        <div id="customer_section">
          <h2>Customer Section</h2>

          <select name="art_director" id="art_director" required>
            <option selected>Select director</option>
            <option value="1">Director 1</option>
            <option value="2">Director 2</option>
            <option value="3">Director 3</option>
          </select>

          <select name="location" id="location" required>
            <option selected>Select location</option>
            <option value="1">Location 1</option>
            <option value="2">Location 2</option>
            <option value="3">Location 3</option>
          </select>

          <div class="">
            <input
              type="text"
              name="customer_id"
              id="customer_id"
              placeholder="Enter Customer ID"
              required
            />
            <button type="button" onclick="getCustomerData(event)">
              Generate
            </button>
          </div>

          <div id="customer_details" class="hidden ">
            <input
              type="text"
              name="fname"
              id="fname"
              placeholder="Enter First Name"
              required
            />
            <input
              type="text"
              name="lname"
              id="lname"
              placeholder="Enter Last Name"
              required
            />
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Enter Email"
              required
            />
            <input
              type="text"
              name="phone"
              id="phone"
              placeholder="Enter Contact Number"
              required
            />
            <input
              type="text"
              name="address"
              id="address"
              placeholder="Enter Address"
              required
            />
            <input
              type="text"
              name="city"
              id="city"
              placeholder="Enter City"
              required
            />
            <input
              type="text"
              name="state"
              id="state"
              placeholder="Enter State"
              required
            />
          </div>

          <input type="date" name="date" id="date" required />

          <div class="">
            <button type="button" onclick="nextOrderPage(event)">Next</button>
          </div>
        </div>

        <div id="order_section" class="hidden">
          <h2>Order Section</h2>

          <div class="">
            <input
              type="file"
              accept=".xml"
              id="xml_file"
              name="xml_file"
              onchange="getOrderData(event)"
              required
            />
          </div>
          
          <textarea name="items_list" id="items_list" class="hidden" rows="3" required></textarea>

          <div id="order_details" class="hidden">
            <div class="">
              <label for="album">Album:</label>
              <input
                type="text"
                name="album"
                id="album"
                placeholder="Enter Album Name"
                required
              />
            </div>

            <div class="order_items" id="order_items"></div>

            <label for="total">Sub Total:</label>
            <input
              type="text"
              name="sub_total"
              id="sub_total"
              placeholder="Enter Sub Total"
              required
            />
            <label for="total">Tax:</label>
            <input
              type="text"
              name="total_tax"
              id="total_tax"
              placeholder="Enter Total Tax"
              required
            />
            <label for="total">Grand Total:</label>
            <input
              type="text"
              name="grand_total"
              id="grand_total"
              placeholder="Enter Grand Total"
              required
            />
          </div>

          <div class="">
            <button type="button" onclick="previousCustomerPage(event)">
              Previous
            </button>
            <button type="button" onclick="nextConfirmationPage(event)">
              Next
            </button>
          </div>
        </div>

        <div id="confirmation_section" class="hidden">
          <h2>Confirmation Section</h2>
          <p>Please update data in previous pages for any changes.</p>

          <div id="confirm_details" class="hidden">
            <label for="fname">First Name:</label>
            <input
              type="text"
              id="confirm_fname"
              name="confirm_fname"
              disabled
            />
            <label for="lname">Last name:</label>
            <input
              type="text"
              id="confirm_lname"
              name="confirm_lname"
              disabled
            />
            <label for="confirm_address">Address:</label>
            <input
              type="text"
              id="confirm_address"
              name="confirm_address"
              disabled
            />
            <label for="confirm_city">City:</label>
            <input type="text" id="confirm_city" name="confirm_city" disabled />
            <label for="confirm_state">State:</label>
            <input
              type="text"
              id="confirm_state"
              name="confirm_state"
              disabled
            />
            <label for="confirm_total">Total:</label>
            <input
              type="number"
              id="confirm_total"
              name="confirm_total"
              disabled
            />
          </div>

          <select
            name="payment"
            id="payment"
            onchange="getConfirmData(event)"
            required
          >
            <option selected>Select payment method</option>
            <option value="stripe">Stripe</option>
            <option value="partial.ly">Partial.ly</option>
            <option value="none">None</option>
          </select>

          <button type="button" onclick="previousOrderPage(event)">
            Previous
          </button>
          <button type="submit">Submit</button>
        </div>
      </form>
    </main>

    <!-- Custom JS -->
    <script src="/static/index.js" defer></script>
  </body>
</html>
